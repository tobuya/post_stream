<div class="user-card">
    <div class="user-photo">
        <% if user.photo %>
            <img src="<%= user.photo %>" alt="profile">
        <% else %>
            <img src="<%= "https://randomuser.me/api/portraits/men/#{rand(1..200)}.jpg" %>" alt="profile">
        <% end %>
    </div>
    <div class="user-info">
    <header class="user-header">
        <h2><%= link_to user.name, user_path(user) %></h2>
        <span><%= user.role || "member" %></span>
    </header>
        <p>Number of Posts: <%= user.posts_counter || 0 %></p>
    </div>
</div>
